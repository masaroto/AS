	<% include partials/headerFunc.ejs %>
	<div class="container">
	    <form action="/pu/func/id/users" method="POST">
	        <div class="form-row">
	            <div class="col-md-9">
	            <input type="text" class="form-control m-2" name="searchUser" placeholder="Search for users">
	        </div>
	        
	        <div class="col-auto my-1">
	            <button type="submit" class="btn btn-primary my-1">search</button> 
	        </div>
	        
	            
	        </div>
	        
	    </form>
	</div>
	<table class="table table-light table-striped">
    <thead>
      <tr>
        <th scope="col"></th>
        <th scope="col">Nome</th>
        <th scope="col">Email</th>
        <th scope="col">Endereço</th>
      </tr>
    </thead>
    <tbody>
      <% var i =0;%>
      <%users.forEach(function(user){%>
        
	      <tr>
                <th scope="row">
                    
                    <form class="form-inline" action="/pu/func/id/users/<%=user._id%>?_method=DELETE" method="POST">
                      <a class="btn btn-outline-success my-2 my-sm-0" href="/pu/func/id/users/<%=user._id %>">Edit</a>
                      <button class="btn btn-outline-danger my-2 my-sm-0" type="submit">Delete</button>
                    
                    </form>
                </th>
                <td><%=user.Name%> <%=user.LastName%></td>
                <td><%=user.Email%></td>
                <td>
                  <%=user.City%> - <%=user.State%>
                  <a class="btn btn-outline-default btn-sm" data-toggle="collapse" href="#input<%=i%>" role="button" aria-expanded="false" aria-controls="collapseExample">Show more</a>
                  <div class="collapse" id="input<%=i%>">
                    <div class="card card-body">
                      <p>Endereço1: <%= user.Adress%></p>
                      <p>Endereço2: <%= user.Adress2%></p>
                        
                    </div>
                    <%i++%>
                  </div>
                </td>
        </tr>
                
            
	    <% }); %>
        
        
    </tbody>
  </table>
	
	
	   
	
	
	
	<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>